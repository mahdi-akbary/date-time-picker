{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "@angular-persian/material-date-picker": [
        "dist/material-date-picker"
      ],
      "npa-mat-date-picker": [
        "dist/npa-mat-date-picker"
      ],
      "npa-mat-date-picker/*": [
        "dist/npa-mat-date-picker/*"
      ],
      "npa-mat-datepicker": [
        "dist/npa-mat-datepicker"
      ],
      "npa-mat-datepicker/*": [
        "dist/npa-mat-datepicker/*"
      ]
    }
  },
  "exclude": [
    ".ng_build"
  ]
}