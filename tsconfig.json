{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "types": [
      "src/typings.d.ts"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "npa-mat-datepicker": [
        "dist/npa-mat-datepicker"
      ],
      "npa-mat-datepicker/*": [
        "dist/npa-mat-datepicker/*"
      ]
    }
  },
  "exclude": [
    ".ng_build"
  ]
}
